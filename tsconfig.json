{
    "include": [
        "src",
    ],
    "ts-node": {
        "compiler": "ttypescript"
    },
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "src/*"
            ],
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ]
    }
}